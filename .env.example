# Configuração do Ambiente - Gabarita AI Frontend
# Copie este arquivo para .env.local e configure as variáveis conforme necessário

# =============================================================================
# CONFIGURAÇÃO DO AMBIENTE
# =============================================================================
# Valores possíveis: development, staging, production
# Se não definido, será detectado automaticamente baseado em NODE_ENV e VERCEL_ENV
NEXT_PUBLIC_APP_ENV=development

# =============================================================================
# CONFIGURAÇÃO DA API
# =============================================================================
# URL base da API do backend
# Desenvolvimento: http://localhost:5000
# Staging: https://gabarita-ai-backend-staging.onrender.com
# Produção: https://gabarita-ai-backend.onrender.com
NEXT_PUBLIC_API_BASE_URL=https://gabarita-ai-backend.onrender.com
NEXT_PUBLIC_API_URL=https://gabarita-ai-backend.onrender.com

# Timeout para requisições da API (em milissegundos)
NEXT_PUBLIC_API_TIMEOUT=30000

# Configurações de retry
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY=1000
NEXT_PUBLIC_API_MAX_RETRY_DELAY=10000

# Configurações do Circuit Breaker
NEXT_PUBLIC_CIRCUIT_BREAKER_THRESHOLD=5
NEXT_PUBLIC_CIRCUIT_BREAKER_TIMEOUT=60000

# Configurações de Cache
NEXT_PUBLIC_CACHE_DEFAULT_TTL=300000
NEXT_PUBLIC_MAX_CACHE_SIZE=50

# =============================================================================
# CONFIGURAÇÃO DO FIREBASE
# =============================================================================
# Obtenha essas configurações no console do Firebase
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_firebase_project_id_here.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_firebase_project_id_here.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# PAGAMENTOS
# =============================================================================
# Mercado Pago
NEXT_PUBLIC_MERCADO_PAGO_PUBLIC_KEY=your_mercado_pago_public_key_here

# =============================================================================
# SERVIÇOS DE IA
# =============================================================================
# OpenAI
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Perplexity
NEXT_PUBLIC_PPX_API_KEY=your_perplexity_api_key_here

# =============================================================================
# CONFIGURAÇÕES DE FUNCIONALIDADES
# =============================================================================
# Habilitar dados mock em desenvolvimento
NEXT_PUBLIC_ENABLE_MOCK_DATA=false

# Configurações de UI
NEXT_PUBLIC_PAGE_SIZE=20

# Configurações de Segurança
NEXT_PUBLIC_TOKEN_REFRESH_THRESHOLD=5
NEXT_PUBLIC_MAX_LOGIN_ATTEMPTS=5

# =============================================================================
# CONFIGURAÇÕES DO NEXT.JS
# =============================================================================
# Configurações específicas do Next.js
NODE_ENV=development
